<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info' %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book_new %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
  		    <!--name-->
          <td><%= link_to(@book.user) do %>
            <%= image_tag @book.user.get_profile_image, size:"100x100" %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <!--body-->
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>
          <% if @book.user == current_user %>
            <td>
              <%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success edit_book_#{@book}" %>
            </td>
            <td>
              <%= link_to 'Destroy', book_path(@book), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_#{@book}"%>
            </td>
          <% end %>
          <!--favorite-->
          <td>
            <% if @book.favorited_by?(current_user) %>
              <%= link_to book_favorites_path(@book), method: :delete do %>
                <i class="fas fa-solid fa-heart" aria-hidden="true" style="color: red;"></i>
                <%= @book.favorites.count %>
              <% end %>
            <% else %>
              <%= link_to book_favorites_path(@book), method: :post do %>
                <i class="fas fa-solid fa-heart" aria-hidden="true"></i>
                <%= @book.favorites.count %>
              <% end %>
            <% end %>
          </td>
          <!--comment_count-->
          <td><p>コメント数: <%= @book.book_comments.count %></p></td>
        </tr>
      </table>
      
      <table>
  		  <tr>
          <!--comment_index-->
          <% @book.book_comments.each do |book_comment| %>
            <td>
              <%= link_to(@book.user) do %>
                <%= image_tag @book.user.get_profile_image, size:"100x100" %><br>
                <%= @book.user.name %>
              <% end %>
            </td>
            <td>
              <%= book_comment.comment %>
            </td>
            <!--delete-->
            <td>
              <%= link_to 'Destroy', book_book_comment_path(@book,book_comment.id), method: :delete, class: "btn btn-sm btn-danger destroy_book_#{@book}"%>
            </td>
          <% end %>
        </tr>
      </table>
      
      <table>
        <tr>
          <!--comment-->
          <%= form_with model: [@book,@book_comment] do |f| %>
            <td>
              <%= f.text_area :comment, rows: '5', cols: '85' %><br>
              <%= f.submit "送信" %>
            </td>
          <% end %>
        </tr>
      </table>
      
    </div>
  </div>
</div>
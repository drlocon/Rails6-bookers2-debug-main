<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @book.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: Book.new %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@book.user) do %>
            <%= image_tag @book.user.get_profile_image, size:"100x100" %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>
          <!--Tag-->
          <td>
            <% @tag_list.each do |list| %>
              <%=link_to list.tag_name,books_path(tag_id:list.id)%><%= list.books.published.count %>
            <% end %>
          </td>
          <!--favorite-->
          <td class=<%= "favorite-" + @book.id.to_s %> >
            <%= render "favorites/btn", book: @book %>
          </td>
          <!--comment-->
          <td class="book-comments-counter">
            <%= render "book_comments/counter", book: @book %>
          </td>
          <!--Rate-->
          <td class="book-rate" data-score="<%= @book.rate %>"></td>
          <!--pv-->
          <td>閲覧数: <%= @book.impressions_count %></td>
          <!--edit/destroy-->
          <% if @book.user == current_user %>
            <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success edit_book_#{@book.id}" %></td>
            <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_#{@book.id}" %></td>
          <% end %>
        </tr>
      </table>
      
      <script>
        $('.book-rate').raty({
          readOnly: true,
          score: function() {
            return $(this).attr('data-score');
          },
          path: '/assets/'
        });
      </script>
      
      <div class="book-comments-index">
        <%= render "book_comments/index", book: @book %>
      </div>
      
      <%= render "book_comments/form", book: @book, book_comment: @book_comment %>
      
    </div>
  </div>
</div>